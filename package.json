{
    "name": "run-create-cli",
    "version": "0.1.0",
    "description": "A useful CLI tool for scaffolding features and generating code blueprints",
    "author": "Pajar Rahmansyah <hi@pajar.my.id>",
    "license": "MIT",
    "keywords": [
        "cli",
        "scaffold",
        "generator",
        "template",
        "typescript",
        "code-generation"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pajarrahmansyah/run-create-cli.git"
    },
    "bugs": {
        "url": "https://github.com/pajarrahmansyah/run-create-cli/issues"
    },
    "homepage": "https://github.com/pajarrahmansyah/run-create-cli#readme",
    "type": "module",
    "files": [
        "dist/",
        "README.md",
        "LICENSE"
    ],
    "bin": {
        "run-create-cli": "dist/run-create-cli.js",
        "rcc": "dist/run-create-cli.js"
    },
    "scripts": {
        "build": "tsup --config tsup.config.ts --no-minify",
        "build:bundled": "tsup --config tsup.config.ts",
        "dev": "tsc -w",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:ci": "vitest run --coverage --reporter=verbose",
        "prepare": "npm run build:bundled"
    },
    "dependencies": {
        "commander": "^12.1.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "esbuild": "^0.25.10",
        "tsup": "^8.5.0",
        "typescript": "^5.5.4",
        "vitest": "^3.2.4"
    }
}